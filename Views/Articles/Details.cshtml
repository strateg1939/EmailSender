@model EmailSender.Models.Article

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.date)
        </dd>
        <dt class="col-sm-2">
            Text of an article
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article_text)
        </dd>
        <dt class="col-sm-2">
            Topic name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Topic.Topic_name)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ArticleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
